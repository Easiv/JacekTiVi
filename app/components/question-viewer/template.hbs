<div class="layout-row layout-wrap">
  {{#each questions as |question|}}
    <div class="flex-20">
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#link-to 'question' question.id}}
              {{#text.headline}}{{question.name}}{{/text.headline}}
            {{/link-to}}
          {{/title.text}}
        {{/card.title}}
        {{#card.actions}}
          <span {{action 'deleteQuestion' question}}>{{paper-icon 'delete'}}</span>
        {{/card.actions}}
      {{/paper-card}}
    </div>
  {{/each}}
</div>